programa {
  funcao inicio() {

    inteiro num ,menor=0, maior=0
   
    faca{ escreva("Digite uma idade: \n")
    leia(num)
   
    se (num<21){
      menor+=1
    }

    se (num>50){
    maior+=1
    }
    
    }

    enquanto(num>0)
   

   
  

    escreva ( "\nTotal de pessoas menores de 21 anos:\n" , menor )
    escreva("\nTotal de pessoas maiores de 50 anos:\n ", maior)
 
    }
    }
